{
  "extends": "solhint:default",
  "rules": {
    "quotes": ["error", "double"],
    "max-line-length": ["error", 120],
    "no-unused-vars": "error",
    "compiler-version": ["error", "^0.8.0"],
    "func-name-mixedcase": "error",
    "reentrancy": "error",
    "no-inline-assembly": "warn",
    "avoid-suicide": "error",
    "avoid-sha3": "warn"
  }
}
